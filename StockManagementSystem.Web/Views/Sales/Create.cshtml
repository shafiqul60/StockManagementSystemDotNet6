@model StockManagementSystem.Core.DTO.SaleVm

@{
    ViewData["Title"] = "Sales Create";
}
<link href="~/css/dropdownstyle.css" rel="stylesheet" />

<div class="container-fluid pt-4 px-4">
    <div class="row rounded align-items-center justify-content-center mx-0">
        <div class="bg-secondary rounded h-auto p-4">
            <h6 class="mb-4">Sale Informations</h6>
            <div class="row">
                <div class="col-sm-6 col-md-4 col-lg-4">
                    <div class="mb-3">
                        <label asp-for="InvoiceNo" class="form-label">Invoice No</label>
                        <input asp-for="InvoiceNo"  class="form-control" readonly/>
                        <span asp-validation-for="InvoiceNo" class="form-text text-danger"></span>
                    </div>
                </div>
                <div class="col-sm-6 col-md-4 col-lg-4">
                    <div class="mb-3">
                        <label asp-for="CustomerName" class="form-label">Customer Name</label>
                        <input asp-for="CustomerName" id="customerName" class="form-control" />
                        <span asp-validation-for="CustomerName" class="form-text text-danger"></span>
                    </div>
                </div>
                <div class="col-sm-6 col-md-4 col-lg-4">
                    <div class="mb-3">
                        <label asp-for="CustomerAddress" class="form-label">Customer Address</label>
                        <input asp-for="CustomerAddress" id="customerAddress" class="form-control" />
                        <span asp-validation-for="CustomerAddress" class="form-text text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-6 col-md-4 col-lg-4">
                    <div class="mb-3">
                        <label asp-for="CustomerEmail" class="form-label">Customer Email</label>
                        <input asp-for="CustomerEmail" id="customerEmail" class="form-control" />
                        <span asp-validation-for="CustomerEmail" class="form-text text-danger"></span>
                    </div>
                </div>
                <div class="col-sm-6 col-md-4 col-lg-4">
                    <div class="mb-3">
                        <label asp-for="CustomerPhone" class="form-label">Customer Phone</label>
                        <input asp-for="CustomerPhone" id="customerPhone" class="form-control" />
                        <span asp-validation-for="CustomerPhone" class="form-text text-danger"></span>
                    </div>
                </div>
                <div class="col-sm-6 col-md-4 col-lg-4">
                    <div class="mb-3">
                        <label asp-for="CreatedDate" class="form-label">Sales Date</label>
                        <input asp-for="CreatedDate" class="form-control" />
                        <span asp-validation-for="CreatedDate" class="form-text text-danger"></span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="container-fluid pt-4 px-4">
    <div class="row rounded align-items-center justify-content-center mx-0">
        <div class="bg-secondary rounded h-auto p-4">
            <h6 class="mb-4">Product Informations</h6>
            <div class="row">
               
                <div class="col-sm-6 col-md-2 col-lg-2">
                    <div class="mb-3">
                        <label class="form-label">Product Code</label>
                        <input type="text" id="txtProductCode" class="form-control dummy_reset_item_form" readonly />
                    </div>
                </div>
                <div class="col-sm-6 col-md-2 col-lg-2">
                    <div class="mb-3">
                        <label class="form-label">Product Brand</label>
                        <input type="text" id="txtProductBrand" class="form-control dummy_reset_item_form" readonly />
                    </div>
                </div>
                <div class="col-sm-6 col-md-2 col-lg-2">
                    <div class="mb-3">
                        <label class="form-label">Product Model</label>
                        <input type="text" id="txtProductModel" class="form-control dummy_reset_item_form" readonly />
                    </div>
                </div>

                <div class="col-sm-6 col-md-2 col-lg-2">
                    <div class="mb-3">
                        <label class="form-label">Product Unit</label>
                        <input type="text" id="txtProductUnit" class="form-control dummy_reset_item_form" readonly />
                    </div>
                </div>
                <div class="col-sm-6 col-md-2 col-lg-2">
                    <div class="mb-3">
                        <label class="form-label">Product Price</label>
                        <input type="text" id="txtProductPrice" class="form-control dummy_reset_item_form" readonly />
                    </div>
                </div>
                <div class="col-sm-6 col-md-2 col-lg-2">
                    <div class="mb-3">
                        <label class="form-label">Stock Quantity</label>
                        <input type="text" id="txtProductStock" class="form-control dummy_reset_item_form" readonly />
                    </div>
                </div>
                
            </div>

            <div class="row">

                <div class="col-sm-6 col-md-4 col-lg-4">
                    <div class="mb-3">
                        <label class="form-label">Product Name</label>
                        @Html.DropDownList("txtProductId", new SelectList(ViewBag.ProductList, "Id", "Name"), "-- Please Select Product --", new { @id = "txtProductId", @class = "form-select dummy_reset_item_form" })
                    </div>
                </div>
                <div class="col-sm-6 col-md-4 col-lg-4">
                    <div class="mb-3">
                        <label class="form-label">Selling Quantity</label>
                        <input type="number" id="txtProductSell" class="form-control dummy_reset_item_form"/>
                    </div>
                </div>
                <div class="col-sm-6 col-md-4 col-lg-4">
                    <div class="mb-3">
                        <button style="margin-top:30px;" type="button" id="btnAddProductData" class="btn btn-primary">Add Product</button>
                        <button style="margin-top:30px;" type="button" id="btnUpdateProductData" class="btn btn-primary">Update Product</button>
                    </div>
                </div>
            </div>

        

        </div>
    </div>
</div>



