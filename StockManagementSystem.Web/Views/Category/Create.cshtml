@model StockManagementSystem.Core.DTO.CategoryVm

@{
    ViewData["Title"] = "Create";
}

<div class="container-fluid pt-4 px-4">
    <div class="row vh-100  rounded align-items-center justify-content-center mx-0">
        <div class="col-md-6">
            <div class="bg-secondary rounded h-100 p-4">
                <h6 class="mb-4">Category Create</h6>
                <form asp-action="Create">
                    <div class="mb-3">
                        <label asp-for="CategoryName" class="form-label">Category Name</label>
                        <input asp-for="CategoryName" class="form-control" />
                        <span asp-validation-for="CategoryName" class="form-text text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="IsActive" class="form-label">Active Status</label>
                        <input type="checkbox" asp-for="IsActive" class="form-check-input"/>
                        <span asp-validation-for="IsActive" class="form-text text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary">Create</button>
                </form>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
